- set_meta_tags :title => "Producer Tapes"

script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.1.2/howler.core.min.js"
script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"
== javascript_include_tag  "jquery.ajaxchimp.min"

section.block.block-section.block-hero
  .container-fluid
    .row
      .col-12.d-flex.align-items-center
        h2.headline Curated beat tapes by music producers from all around the world.

nav.block.block-nav
  .container-fluid
    .row
      .col-12
        ul.nav-list.nav-list-horz
          li.nav-list-item
            == link_to 'Tools', '/tools/', class: "nav-link"
          li.nav-list-item
            == link_to 'Directory', '/directory/', class: "nav-link"
          li.nav-list-item.active
            == link_to 'Tapes', '/tapes/', class: "nav-link"
          li.nav-list-item
            == link_to 'Submit Tapes', '/tapes/submit', class: "nav-link"

section.block.block-section
  .container-fluid
    .row
      .col-12
        .row.d-flex.justify-content-start
          - data.site.beattapes.each do |id, tapes|
            .col-12.col-md-3
              .catalog
                .catalog-cover
                  == link_to '/tapes/' + tapes.tape_id, class: "catalog-cover-link" do
                    = image_tag "#{tapes.cover_art.url}", :alt => "#{tapes.title}", :class => "catalog-cover-img"
                == link_to tapes.title, '/tapes/' + tapes.tape_id, class: "catalog-title"
                p.catalog-producer
                  | by&nbsp;
                  = link_to "#{tapes.producer}","#{tapes.producer_url}", :class => "", :onclick => "gtag('event', 'click', {'event_category' : '#{tapes.producer}', 'event_label' : out_producer, 'value' : 0});"
section.block.block-newsletter
  .container-fluid
    .row
      .col-12
        = partial "partials/cta-newslettersignup"